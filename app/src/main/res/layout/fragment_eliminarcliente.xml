<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.slideshow.EliminarClienteFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollbarStyle="outsideInset">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="34dp"
                        android:layout_marginLeft="140dp"
                        android:layout_marginTop="40dp"
                        android:height="60dp"
                        android:fontFamily="cursive"
                        android:text="Eliminando cliente"
                        android:textColor="#FF1100"
                        android:textSize="24sp" />

                    <ImageView
                        android:layout_width="112dp"
                        android:layout_height="90dp" />
                </LinearLayout>

                <EditText
                    android:id="@+id/id_cli_E"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="clave cliente"
                    android:inputType="number" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:height="40dp"
                    android:text="identificador cliente" />

                <EditText
                    android:id="@+id/id_nombreE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="nombre"
                    android:inputType="textPersonName" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:height="40dp"
                    android:text="nombre del cliente"/>

                <EditText
                    android:id="@+id/telefonoE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="telefono"
                    android:inputType="phone" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:height="40dp"
                    android:text="telefono"
                    android:enabled="false"/>

                <EditText
                    android:id="@+id/edadE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:enabled="false"
                    android:hint="edad"
                    android:inputType="text" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:height="40dp"
                    android:text="edad"
                    android:enabled="false"/>

                <EditText
                    android:id="@+id/sexo_clienteE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:enabled="false"
                    android:hint="sexo"
                    android:inputType="text" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:height="40dp"
                    android:text="sexo"/>
                <Button
                    android:id="@+id/buttonlimpiar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="limpiar"/>

                <Button
                    android:id="@+id/botonbuscarE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="buscar"
                    app:backgroundTint="#FF5722" />
            </LinearLayout>

        </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>